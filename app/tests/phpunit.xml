<?xml version="1.0" encoding="utf-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.7/phpunit.xsd"
stopOnFailure="true"
convertErrorsToExceptions="true" 
convertNoticesToExceptions="true"
convertWarningsToExceptions="true"
colors="true" 
bootstrap="bootstrap.php"

checkForUnintentionallyCoveredCode="true"

beStrictAboutTestsThatDoNotTestAnything="true"
beStrictAboutTestSize="true"
beStrictAboutOutputDuringTests="true"
beStrictAboutTodoAnnotatedTests="true"
beStrictAboutChangesToGlobalState="false"

verbose="true">

	<testsuites>
		<testsuite name="unit">
			<directory>unit</directory>
		</testsuite>
		<testsuite name="functional">
			<directory>functional</directory>
		</testsuite>
		<testsuite name="user">
			<directory>user</directory>
		</testsuite>
	</testsuites>
	
	<!-- codecoverage filters -->
	<filter>
		<blacklist>
			<directory>../../vendor</directory>
		</blacklist>
		<whitelist>
			<directory>../</directory>
			<exclude>
				<directory>../config</directory>
				<directory>../components/widgets/views</directory>
				<directory>../data</directory>
				<directory>../emails</directory>
				<directory>../i18n</directory>
				<directory>../runtime</directory>
				<directory>../views</directory>
				<directory>../tests</directory>
				<directory>../public</directory>
			</exclude>
		</whitelist>
	</filter>
	
	<!--
 
		
	<logging>
		<log  type="coverage-html" target="reports" />
	</logging>
	 --> 


</phpunit>